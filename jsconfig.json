{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react",
    "paths": {
      "@app/*": ["app/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@constants": ["constants"],
      "@constants/*": ["constants/*"],
      "@models/*": ["models/*"],
      "@hooks/*": ["hooks/*"],
      "@pages/*": ["pages/*"],
      "@routes": ["routes"],
      "@routes/*": ["routes/*"],
      "@schemas/*": ["schemas/*"],
      "@services/*": ["services/*"],
      "@state": ["state"],
      "@state/*": ["state/*"],
      "@styles/*": ["styles/*"],
      "@styles": ["styles"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils"]
    }
  }
}
